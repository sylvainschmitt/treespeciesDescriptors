   keywords = {Biodiversity,Bird assemblages,Diversity partitioning,Hill numbers,Large-scale monitoring,Phylogenetic entropy,Shannon entropy,Turn-over,β-diversity},
   pages = {109-118},
   pmid = {25685310},
   title = {Decomposing changes in phylogenetic and functional diversity over space and time},
