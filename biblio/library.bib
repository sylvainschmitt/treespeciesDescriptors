   keywords = {Lotka,Volterra model,annual plant model,functional traits,individual,intraspecific trait variation,level variation,modern coexistence theory,storage effect},
   month = {2},
   pages = {e01493},
   publisher = {John Wiley & Sons, Ltd},
   title = {Synthesizing the effects of individual-level variation on coexistence},
   volume = {92},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1002/ecm.1493 https://onlinelibrary.wiley.com/doi/abs/10.1002/ecm.1493 https://esajournals.onlinelibrary.wiley.com/doi/10.1002/ecm.1493},
