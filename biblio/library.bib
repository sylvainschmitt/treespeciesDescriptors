   month = {2},
   pages = {225-232},
   pmid = {25667075},
   publisher = {Botanical Society of America},
   title = {Continuous within-plant variation as a source of intraspecific functional diversity: patterns, magnitude, and genetic correlates of leaf variability in Helleborus foetidus (Ranunculaceae)},
