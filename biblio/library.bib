   issue = {2},
   journal = {Journal of Plant Ecology},
   keywords = {functional trait,habitat heterogeneity,karst forest,relative neighbourhood density,spatial distribution,species coexistence},
   month = {4},
   pages = {131-140},
   publisher = {Narnia},
   title = {Aggregated spatial distributions of species in a subtropical karst forest, southwestern China},
