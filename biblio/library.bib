   keywords = {Comparative ecology,Functional ecology,Genetic variability,Intraspecific functional variability,Phenotypic plasticity,Plant functional traits,Within-species variability},
   month = {9},
   pages = {217-225},
   publisher = {Urban & Fischer},
   title = {When and how should intraspecific variability be considered in trait-based plant ecology?},
   volume = {13},
   url = {http://www.sciencedirect.com/science/article/pii/S143383191100028X http://linkinghub.elsevier.com/retrieve/pii/S143383191100028X},
