   issue = {1},
   journal = {New Phytologist},
   keywords = {drought tolerance,functional ecology,leaf habit,plant hydraulics,turgor loss point},
   pages = {148-161},
   pmid = {34171131},
   title = {Beyond leaf habit: generalities in plant function across 97 tropical dry forest tree species},
   volume = {232},
   year = {2021},
