   editor = {John Stinchcombe},
   issn = {2041210X},
   issue = {6},
   journal = {Methods in Ecology and Evolution},
   keywords = {conditional neutrality,environmental gradient,field manipulation,genetic trade-off,reciprocal transplant experiment},
   month = {6},
   pages = {738-749},
   publisher = {John Wiley & Sons, Ltd (10.1111)},
   title = {Identifying targets and agents of selection: innovative methods to evaluate the processes that contribute to local adaptation},
   volume = {8},
