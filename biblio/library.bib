   month = {4},
   pages = {227-238},
   publisher = {John Wiley & Sons, Ltd (10.1111)},
   title = {Forest-tree population genomics and adaptive evolution},
   volume = {170},
   url = {http://doi.wiley.com/10.1111/j.1469-8137.2006.01686.x},
   year = {2006},
}
