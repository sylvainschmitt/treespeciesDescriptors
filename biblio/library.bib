   journal = {Biological Invasions},
   keywords = {Adaptive divergence,Evolutionary response,Genetic assimilation,Invasive plants,Temperate rainforest},
   pages = {1615-1625},
   title = {Forests are not immune to plant invasions: Phenotypic plasticity and local adaptation allow Prunella vulgaris to colonize a temperate evergreen rainforest},
