   issn = {16180437},
   journal = {Perspectives in Plant Ecology, Evolution and Systematics},
   keywords = {Between-species and intraspecific functional trait,Emergent and understory plants,Giant cushion-plants,Graminoid and forb guilds,Herbivore pressure,Tropical Andean peatland},
   month = {2},
   pages = {103-114},
   publisher = {Urban & Fischer},
   title = {Cushion-plant protection determines guild-dependent plant strategies in high-elevation peatlands of the Cordillera Real, Bolivian Andes},
