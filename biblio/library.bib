   keywords = {Elevational gradient,Interspecific and intraspecific variation,Leaf nutrient content,Plant community structure,Plant functional traits,Species turnover,Specific leaf area (SLA),Variance decomposition},
   month = {10},
   pages = {1254-1261},
   publisher = {John Wiley & Sons, Ltd (10.1111)},
   title = {Contrasting effects of plant inter- and intraspecific variation on community-level trait measures along an environmental gradient},
