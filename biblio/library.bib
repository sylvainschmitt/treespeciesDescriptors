   issn = {03781127},
   journal = {Forest Ecology and Management},
   keywords = {Biomass productivity,Forest gap model FORMIND,Leaf area index,Shannon diversity,Timber volume,dbh of lower cutting threshold},
   month = {12},
   pages = {517-525},
   publisher = {Elsevier},
   title = {Simulation of succession in a neotropical forest: High selective logging intensities prolong the recovery times of ecosystem functions},
