   issue = {2},
   journal = {Journal of Ecology},
   keywords = {dry matter content,growth form,nutrient content,phylogeny,plant trait,specific leaf area,terrestrial and aquatic environments,trade-off,vegetative organs},
   pages = {362-373},
   title = {Evidence of the ‘plant economics spectrum’ in a subarctic flora},
   volume = {98},
   url = {http://onlinelibrary.wiley.com/doi/10.1111/j.1365-2745.2009.01615.x/abstract},
