   pmid = {9990046},
   publisher = {National Academy of Sciences},
   title = {Biodiversity and ecosystem productivity in a fluctuating environment: The insurance hypothesis},
   volume = {96},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/9990046 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC15485 http://www.pnas.org/cgi/doi/10.1073/pnas.96.4.1463},
