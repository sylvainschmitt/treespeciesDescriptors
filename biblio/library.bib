   doi = {10.1890/04-0922},
   isbn = {0012-9615},
   issn = {0012-9615},
   issue = {1},
   journal = {Ecological Monographs},
   keywords = {Biodiversity,Complementary resource use,Ecosystem goods and services,Ecosystem processes,Ecosystem properties,Functional characteristics,Functional diversity,Net primary production,Sampling effect,Species extinction,Species invasions,Species richness,biodiversity,complementary resource use,ecosystem goods and services,ecosystem processes,ecosystem properties,functional characteristics,functional diversity,net primary production,sampling effect,species extinction,species invasions,species richness,stability},
   month = {2},
