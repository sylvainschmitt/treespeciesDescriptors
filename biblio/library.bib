   issue = {1},
   journal = {Oikos},
   keywords = {BIODEGRADATION,BIODIVERSITY,FORESTS & forestry,SPECIES,SPECIES diversity,TAXONOMY},
   pages = {135-147},
   title = {On the measurement of species diversity incorporating species differences},
