   isbn = {0123456789},
   issn = {15729737},
   issue = {3},
   journal = {Conservation Genetics},
   keywords = {Central and West Africa,Cryptic species,Ecotone,Genetic structure,Hybridization,Introgression,Microsatellites,Speciation},
   pages = {501-514},
   publisher = {Springer Netherlands},
   title = {Species delimitation in the African tree genus Lophira (Ochnaceae) reveals cryptic genetic variation},
   volume = {21},
