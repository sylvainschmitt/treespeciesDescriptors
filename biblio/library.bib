}
@article{Zhang2020,
   abstract = {Diploid genomes consist of two homologous copies of chromosomes with one from each parent while polyploid genomes contain more than two homologous sets of chromosomes. Most of the reference genome assemblies collapsed haplotypes that represent ‘mosaic’ sequences, ignoring allelic variants that may be involved in important cellular and biological functions. Unzipping haplotypes into distinct sets of sequences has been a growing trend in recent genome studies, as it is an essential tool towards resolving important clinical and biological questions, such as compound heterozygotes, heterosis, and evolution. Herein, we review existing methods for alignment-based and assembly-based haplotype phasing for heterozygous diploid and polyploid genomes, as well as recent advances of experimental approaches for improved genome phasing. We anticipate that full haplotype phasing could become a routine procedure in genome studies in the near future.},
   author = {Xingtan Zhang and Ruoxi Wu and Yibin Wang and Jiaxin Yu and Haibao Tang},
   doi = {10.1016/j.csbj.2019.11.011},
   issn = {20010370},
   journal = {Computational and Structural Biotechnology Journal},
   keywords = {Genome assembly,Haplotype phasing,Heterozygosity,Ploidy,Reference genome},
   pages = {66-72},
   publisher = {The Authors},
   title = {Unzipping haplotypes in diploid and polyploid genomes},
   volume = {18},
