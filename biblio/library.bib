   isbn = {0022-0477},
   issn = {00220477},
   issue = {5},
   journal = {Journal of Ecology},
   keywords = {Community ecology,Community genetics,Competition and coexistence,Genetic diversity,Genotype-environment interactions,Grasslands,Species diversity},
   month = {9},
   pages = {895-907},
   pmid = {4139},
   publisher = {Blackwell Publishing Ltd},
   title = {The role of genotypic diversity in determining grassland community structure under constant environmental conditions},
   volume = {95},
