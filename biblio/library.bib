   pages = {29},
   publisher = {BioMed Central},
   title = {The advantages and limitations of trait analysis with GWAS: A review},
   volume = {9},
   url = {http://plantmethods.biomedcentral.com/articles/10.1186/1746-4811-9-29},
   year = {2013},
}
@article{Turner2014,
