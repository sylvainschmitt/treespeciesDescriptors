   issn = {00166731},
   issue = {2},
   journal = {Genetics},
   month = {10},
   pages = {977-993},
   pmid = {18780740},
   publisher = {Genetics},
   title = {A genome-scan method to identify selected loci appropriate for both dominant and codominant markers: A Bayesian perspective},
   volume = {180},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/17246615 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC1201091 http://www.ncbi.nlm.nih.gov/pubmed/18780740 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC2567396},
