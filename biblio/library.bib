   keywords = {Africa,Non-Symmetric Correspondence Analysis,beta diversity,community composition,habitat association,soil,tree communities,trend surface analysis},
   month = {11},
   pages = {663-674},
   publisher = {Cambridge University Press},
   title = {Regional variation in tropical forest tree species composition in the Central African Republic: an assessment based on inventories by forest companies},
   volume = {24},
   url = {https://www.cambridge.org/core/product/identifier/S0266467408005506/type/journal_article},
   year = {2008},
}
