   isbn = {1466-8238},
   issn = {14668238},
   issue = {8},
   journal = {Global Ecology and Biogeography},
   keywords = {Boosted regression trees,Climate,Intermediate disturbance hypothesis,Productivity and diversity relationship,Soil drainage class,Species richness,Species-energy relationship,Stand age},
