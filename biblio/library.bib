   publisher = {Frontiers},
   title = {A New Architectural Perspective on Wind Damage in a Natural Forest},
   volume = {1},
   url = {https://www.frontiersin.org/articles/10.3389/ffgc.2018.00013/full},
   year = {2019},
}
@article{Poorter2019,
