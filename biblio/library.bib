   isbn = {2150-8925},
   issn = {21508925},
   issue = {10},
   journal = {Ecosphere},
   keywords = {Abiotic filtering,Biotic filtering,Community assembly,Functional diversity,Intraspecific trait variation,Leaf size,Oak-hickory temperate forest,Ontogeny,Ozarks,Plant functional traits,Specific leaf area,Tyson research center plot},
   month = {10},
