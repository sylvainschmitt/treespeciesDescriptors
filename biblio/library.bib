   issn = {00129658},
   issue = {9},
   journal = {Ecology},
   keywords = {Amazonia,Competition experiments,Lowland tropical rain forest,Nitrogen,Nutrient availability,Phosphorus,Photosynthetically active radiation (PAR),Root competition,Seedling growth,Tree fall gaps,Trenching},
   pages = {2525-2538},
