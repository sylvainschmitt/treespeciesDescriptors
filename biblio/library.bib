   issue = {1},
   journal = {Methods in Ecology and Evolution},
   keywords = {modelling,population ecology,population genetics,quantitative genetics},
   month = {1},
   pages = {75-85},
   publisher = {John Wiley & Sons, Ltd (10.1111)},
   title = {Disentangling evolutionary, plastic and demographic processes underlying trait dynamics: a review of four frameworks},
   volume = {8},
