   doi = {10.1093/aob/mcr225},
   issn = {0305-7364, 1095-8290},
   issue = {7},
   journal = {Annals of Botany},
   keywords = {Ellenberg numbers,Leaf thickness,functional traits,leaf density,leaf nitrogen,leaf size,relative growth rate (RGR),shade tolerance,variation in trait expression},
   pages = {1137-1345},
   pmid = {21948627},
   title = {Is leaf dry matter content a better predictor of soil fertility than specific leaf area?},
