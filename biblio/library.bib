   issue = {1},
   journal = {Journal of Ecology},
   keywords = {basal area,canopy height,hurricanes,power dissipation index,stem density,tropical dry forest,tropical humid forest,typhoons},
   month = {1},
   pages = {279-292},
   publisher = {John Wiley & Sons, Ltd (10.1111)},
   title = {Globally consistent impact of tropical cyclones on the structure of tropical and subtropical forests},
