   issn = {10916490},
   issue = {15},
   journal = {Proceedings of the National Academy of Sciences of the United States of America},
   keywords = {Arabidopsis,Cell division,Computer modeling,Live imaging},
   note = {Mathematical model of cell division in SAM and wall placements, not relevant for msc.<br/><br/>- flower founder cells may change their“preferred”division polarity before the rapid growth characteristic of flower primordia<br/>- only L1!},
