   doi = {10.1016/J.RSE.2017.11.018},
   issn = {0034-4257},
   journal = {Remote Sensing of Environment},
   keywords = {Aboveground biomass,Disturbance,Forest modeling,Lidar simulation,Resolution,Scale,Tropical forest},
