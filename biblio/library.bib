   issn = {20457758},
   issue = {11},
   journal = {Ecology and Evolution},
   keywords = {Amazon,Guiana Shield,Myristicaceae,Virola,allopatric divergence,interspecific gene flow,secondary contact},
   note = {- it is possible that divergence occurred in allopatry or parapatry and that secondary contact did not suppress divergence},
